<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:paz="clr-namespace:Avalonia.Controls.PanAndZoom;assembly=Avalonia.Controls.PanAndZoom"
             xmlns:Controls="clr-namespace:Core2D.Avalonia.Controls;assembly=Core2D.Avalonia"
             Focusable="True">
    <Grid RowDefinitions="Auto,5,*" ColumnDefinitions="250,*,250">
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="Transparent">
            <MenuItem Header="_File">
                <MenuItem Header="New" x:Name="FileNew"/>
                <Separator/>
                <MenuItem Header="_Open..." x:Name="FileOpen"/>
                <Separator/>
                <MenuItem Header="Save _As..." x:Name="FileSaveAs"/>
                <Separator/>
                <MenuItem Header="E_xit" x:Name="FileExit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="Cut" x:Name="EditCut"/>
                <MenuItem Header="Copy" x:Name="EditCopy"/>
                <MenuItem Header="Paste" x:Name="EditPaste"/>
                <MenuItem Header="Delete" x:Name="EditDelete"/>
                <Separator/>
                <MenuItem Header="Group" x:Name="EditGroup"/>
                <Separator/>
                <MenuItem Header="Select All" x:Name="EditSelectAll"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="2" Grid.Column="0">
            <ListBox Items="{Binding Tools}" SelectedItem="{Binding CurrentTool}">
                <ListBox.DataTemplates>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}"/>
                    </DataTemplate>
                </ListBox.DataTemplates>
            </ListBox>
        </Grid>
        <Border Grid.Row="2" Grid.Column="1">
            <Border ClipToBounds="True">
                <paz:ZoomBorder x:Name="zoomBorder" Stretch="None" ZoomSpeed="1.2" Background="Transparent" ClipToBounds="False" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Controls:LayerContainerInputView x:Name="inputView" Background="Transparent" ClipToBounds="False" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Background="SlateGray" Width="{Binding CurrentContainer.Width}" Height="{Binding CurrentContainer.Height}" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Controls:LayerContainerRenderView x:Name="rendererView" Width="{Binding CurrentContainer.Width}" Height="{Binding CurrentContainer.Height}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </Controls:LayerContainerInputView>
                </paz:ZoomBorder>
            </Border>
        </Border>
        <Grid Grid.Row="2" Grid.Column="2">
            <ListBox Items="{Binding CurrentContainer.Shapes}">
                <ListBox.DataTemplates>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"/>
                    </DataTemplate>
                </ListBox.DataTemplates>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>

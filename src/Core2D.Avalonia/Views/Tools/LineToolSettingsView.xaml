<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Core2D.Avalonia.Views.Tools;assembly=Core2D.Avalonia">
    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*,50">
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="0" Text="ConnectPoints"/>
        <CheckBox Classes="default" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" IsChecked="{Binding ConnectPoints}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="1" Text="HitTestRadius"/>
        <Slider Classes="default" Grid.Column="1" Grid.Row="1" Value="{Binding HitTestRadius}" Minimum="0" Maximum="32" SmallChange="0.1" LargeChange="1" IsSnapToTickEnabled="True" TickFrequency="0.1"/>
        <TextBox Classes="default" Grid.Column="2" Grid.Row="1" Text="{Binding HitTestRadius}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="2" Text="SplitIntersections"/>
        <CheckBox Classes="default" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" IsChecked="{Binding SplitIntersections}"/>
    </Grid>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Core2D.Avalonia.Views;assembly=Core2D.Avalonia"
             xmlns:ViewsShapes="clr-namespace:Core2D.Avalonia.Views.Shapes;assembly=Core2D.Avalonia"
             xmlns:CoreShapes="clr-namespace:Core2D.Shapes;assembly=Core2D.Avalonia">
    <ContentControl Content="{Binding CurrentTool.Settings}">
        <ContentControl.DataTemplates>
            <DataTemplate DataType="{x:Type CoreShapes:PointShape}">
                <ViewsShapes:PointShapeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type CoreShapes:LineShape}">
                <ViewsShapes:LineShapeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type CoreShapes:CubicBezierShape}">
                <ViewsShapes:CubicBezierShapeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type CoreShapes:QuadraticBezierShape}">
                <ViewsShapes:QuadraticBezierShapeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type CoreShapes:FigureShape}">
                <ViewsShapes:FigureShapeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type CoreShapes:PathShape}">
                <ViewsShapes:PathShapeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type CoreShapes:RectangleShape}">
                <ViewsShapes:RectangleShapeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type CoreShapes:EllipseShape}">
                <ViewsShapes:EllipseShapeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type CoreShapes:TextShape}">
                <ViewsShapes:TextShapeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type CoreShapes:GroupShape}">
                <ViewsShapes:GroupShapeView/>
            </DataTemplate>
        </ContentControl.DataTemplates>
    </ContentControl>
</UserControl>

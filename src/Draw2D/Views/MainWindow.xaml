<Window x:Class="Draw2D.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Draw2D.Views"
        xmlns:app="clr-namespace:Draw2D"
        WindowState="Normal" WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True" RenderOptions.BitmapInterpolationMode="HighQuality"
        Foreground="{DynamicResource ThemeForegroundBrush}"
        Title="Draw2D" Height="690" Width="1320"
        mc:Ignorable="d"
        d:DataContext="{x:Static app:App.ToolContext}"
        d:DesignWidth="1320" d:DesignHeight="690">
    <!--<local:MainView/>-->
    <Grid RowDefinitions="Auto,5,*,5" ColumnDefinitions="340,Auto,*">
        <Rectangle Fill="Red" Height="24" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>
        <Rectangle Fill="Blue" Grid.Row="2" Grid.Column="0"/>
        <GridSplitter Grid.Row="2" Grid.Column="1"/>
        <Rectangle Fill="Green" Grid.Row="2" Grid.Column="2"/>
    </Grid>
</Window>

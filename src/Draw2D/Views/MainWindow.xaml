<Window x:Class="Draw2D.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Draw2D.Views"
        WindowState="{Binding WindowState}" WindowStartupLocation="{Binding WindowStartupLocation}"
        UseLayoutRounding="True" RenderOptions.BitmapInterpolationMode="HighQuality"
        Foreground="{DynamicResource ThemeForegroundBrush}"
        Title="Draw2D" Height="{Binding Height}" Width="{Binding Height}"
        mc:Ignorable="d"
        d:DesignWidth="1000" d:DesignHeight="700">
    <local:MainView/>
</Window>

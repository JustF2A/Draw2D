<UserControl x:Class="Draw2D.Views.Tools.SelectionToolSettingsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Draw2D.Views.Tools"
             xmlns:converters="clr-namespace:Draw2D.Converters"
             mc:Ignorable="d"
             d:DesignWidth="500" d:DesignHeight="400">
    <UserControl.Resources>
        <converters:StyleIdToStyleConverter x:Key="StyleIdToStyleConverter"/>
    </UserControl.Resources>
    <TabControl Classes="default" TabStripPlacement="Top">
        <TabItem Classes="default" Header="Settings">
            <ScrollViewer>
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*">
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="0" Text="Mode"/>
                    <TextBox Classes="default" Grid.Column="1" Grid.Row="0" Text="{Binding Mode}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="1" Text="Targets"/>
                    <TextBox Classes="default" Grid.Column="1" Grid.Row="1" Text="{Binding Targets}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="2" Text="SelectionModifier"/>
                    <TextBox Classes="default" Grid.Column="1" Grid.Row="2" Text="{Binding SelectionModifier}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="3" Text="ConnectionModifier"/>
                    <TextBox Classes="default" Grid.Column="1" Grid.Row="3" Text="{Binding ConnectionModifier}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="4" Text="ClearSelectionOnClean"/>
                    <CheckBox Classes="default" Grid.Column="1" Grid.Row="4" IsChecked="{Binding ClearSelectionOnClean}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="5" Text="HitTestRadius"/>
                    <TextBox Classes="default" Grid.Column="1" Grid.Row="5" Text="{Binding HitTestRadius}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="6" Text="ConnectPoints"/>
                    <CheckBox Classes="default" Grid.Column="1" Grid.Row="6" IsChecked="{Binding ConnectPoints}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="7" Text="ConnectTestRadius"/>
                    <TextBox Classes="default" Grid.Column="1" Grid.Row="7" Text="{Binding ConnectTestRadius}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="8" Text="DisconnectPoints"/>
                    <CheckBox Classes="default" Grid.Column="1" Grid.Row="8" IsChecked="{Binding DisconnectPoints}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="9" Text="DisconnectTestRadius"/>
                    <TextBox Classes="default" Grid.Column="1" Grid.Row="9" Text="{Binding DisconnectTestRadius}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="10" Text="Hold Ctrl key to add/remove selected shapes."/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="11" Text="Hold Shift key to connect/disconnect points."/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="12" Text="Hold Shift key to select path figure or group shape/point."/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="13" Text="Hold Alt key to select figure shape."/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="14" Text="Hold Shift+Alt key to select figure shape."/>
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem Classes="default" Header="SelectionStyle">
            <ScrollViewer>
                <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*">
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="0" Text="SelectionStyle"/>
                    <TextBox Classes="default" Grid.Column="1" Grid.Row="0" Text="{Binding SelectionStyle}"/>
                    <ContentControl Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
                        <ContentControl.Content>
                            <MultiBinding Mode="OneWay" Converter="{StaticResource StyleIdToStyleConverter}">
                                <Binding Path="SelectionStyle" Mode="OneWay"/>
                                <Binding Path="$parent[Window].DataContext.StyleLibrary" Mode="OneWay"/>
                            </MultiBinding>
                        </ContentControl.Content>
                    </ContentControl>
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem Classes="default" Header="Object">
            <ScrollViewer>
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*">
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="0" Text="Id"/>
                    <TextBox Classes="default" Grid.Column="1" Grid.Row="0" Text="{Binding Id}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="1" Text="Name"/>
                    <TextBox Classes="default" Grid.Column="1" Grid.Row="1" Text="{Binding Name}"/>
                    <TextBlock Classes="default" Grid.Column="0" Grid.Row="2" Text="IsDirty"/>
                    <CheckBox Classes="default" Grid.Column="1" Grid.Row="2" IsEnabled="False" IsChecked="{Binding IsDirty, Mode=OneWay}"/>
                    <Button Classes="default" Content="MarkAsDirty=True" Command="{Binding MarkAsDirty}" CommandParameter="True" Grid.Column="1" Grid.Row="3"/>
                    <Button Classes="default" Content="MarkAsDirty=False" Command="{Binding MarkAsDirty}" CommandParameter="False" Grid.Column="1" Grid.Row="4"/>
                    <Button Classes="default" Content="Invalidate" Command="{Binding Invalidate}" Grid.Column="1" Grid.Row="5"/>
                    <Button Classes="default" Content="SetUniqueId" Command="{Binding SetUniqueId}" Grid.Column="1" Grid.Row="6"/>
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem Classes="default" Header="Owner">
            <ContentControl Content="{Binding Owner}"/>
        </TabItem>
    </TabControl>
</UserControl>

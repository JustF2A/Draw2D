<UserControl x:Class="Draw2D.Views.ZoomServiceView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Draw2D.Views"
             mc:Ignorable="d"
             d:DesignWidth="400" d:DesignHeight="300">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*">
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="0" Text="ZoomSpeed"/>
        <TextBox Classes="default" Grid.Column="1" Grid.Row="0" Text="{Binding ZoomServiceState.ZoomSpeed}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="1" Text="ZoomX"/>
        <TextBox Classes="default" Grid.Column="1" Grid.Row="1" Text="{Binding ZoomServiceState.ZoomX}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="2" Text="ZoomY"/>
        <TextBox Classes="default" Grid.Column="1" Grid.Row="2" Text="{Binding ZoomServiceState.ZoomY}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="3" Text="OffsetX"/>
        <TextBox Classes="default" Grid.Column="1" Grid.Row="3" Text="{Binding ZoomServiceState.OffsetX}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="4" Text="OffsetY"/>
        <TextBox Classes="default" Grid.Column="1" Grid.Row="4" Text="{Binding ZoomServiceState.OffsetY}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="5" Text="IsPanning"/>
        <CheckBox Classes="default" Grid.Column="1" Grid.Row="5" IsEnabled="False" IsChecked="{Binding ZoomServiceState.IsPanning, Mode=OneWay}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="6" Text="IsZooming"/>
        <CheckBox Classes="default" Grid.Column="1" Grid.Row="6" IsEnabled="False" IsChecked="{Binding ZoomServiceState.IsZooming, Mode=OneWay}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="7" Text="CustomDraw"/>
        <CheckBox Classes="default" Grid.Column="1" Grid.Row="7" IsChecked="{Binding ZoomServiceState.CustomDraw, Mode=TwoWay}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="8" Text="InitFitMode"/>
        <TextBox Classes="default" Grid.Column="1" Grid.Row="8" Text="{Binding ZoomServiceState.InitFitMode}"/>
        <TextBlock Classes="default" Grid.Column="0" Grid.Row="9" Text="AutoFitMode"/>
        <TextBox Classes="default" Grid.Column="1" Grid.Row="9" Text="{Binding ZoomServiceState.AutoFitMode}"/>
    </Grid>
</UserControl>

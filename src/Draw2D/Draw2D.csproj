<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>netcoreapp3.0;net461</TargetFrameworks>
    <EnableDefaultCompileItems>False</EnableDefaultCompileItems>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <VersionPrefix>0.0.1</VersionPrefix>
    <VersionSuffix></VersionSuffix>
    <Authors>Wiesław Šoltés</Authors>
    <Company>Wiesław Šoltés</Company>
    <Description>A multi-platform 2D diagram editor.</Description>
    <Copyright>Copyright © Wiesław Šoltés 2019</Copyright>
    <PackageId>Draw2D</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/wieslawsoltes/Draw2D</PackageProjectUrl>
    <PackageTags>2d;editor;data;diagram;graphics;geometry;data;shapes;wysiwyg-editor</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <DefineConstants>$(DefineConstants);USE_SERIALIZE_STYLES</DefineConstants>
    <DefineConstants>$(DefineConstants);USE_SERIALIZE_GROUPS</DefineConstants>
    <DefineConstants>$(DefineConstants);USE_LOAD_EDITOR</DefineConstants>
    <DefineConstants>$(DefineConstants);USE_SAVE_EDITOR</DefineConstants>
    <DefineConstants>$(DefineConstants);USE_LOAD_WINDOW</DefineConstants>
    <DefineConstants>$(DefineConstants);USE_SAVE_WINDOW</DefineConstants>
    <!--<DefineConstants>$(DefineConstants);USE_LOAD_STYLES</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_SAVE_STYLES</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_LOAD_GROUPS</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_SAVE_GROUPS</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_SVG_POINT</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_CLOSE_SHAPE</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);DEBUG_DRAW_TEXT</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);DEBUG_DICT_CACHE</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_DRAW_LINE</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_DRAW_RECT</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_DRAW_OVAL</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_DEBUG_DIRTY</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_GROUP_SHAPES</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_PATH_FIGURES</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_CONTAINER_SHAPES</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_POINT_DECORATOR</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);DEBUG_CONNECTORS</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_CONTAINER_POINTS</DefineConstants>-->
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="**\*.cs" Exclude="obj\**" />
    <AvaloniaResource Include="Assets\*" Exclude="bin\**;obj\**;**\*.xproj;packages\**;@(EmbeddedResource)" />
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.8.1-cibuild0002893-beta" />
    <PackageReference Include="Avalonia.Desktop" Version="0.8.1-cibuild0002893-beta" />
    <PackageReference Include="Avalonia.Controls.DataGrid" Version="0.8.1-cibuild0002893-beta" />
    <PackageReference Include="Avalonia.Angle.Windows.Natives" Version="2.1.0.2019013001" />
    <PackageReference Include="Math.Spatial" Version="1.0.4" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="SkiaSharp" Version="1.68.0" />
    <PackageReference Include="SkiaSharp.Svg" Version="1.60.0" />
    <PackageReference Include="System.Drawing.Common" Version="4.5.1" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <Reference Include="System" />
    <Reference Include="System.Drawing" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0-preview.2" />
  </ItemGroup>

  <PropertyGroup Condition="'$(RuntimeIdentifier)' == 'win-x64' or '$(RuntimeIdentifier)' == 'linux-x64' or '$(RuntimeIdentifier)' == 'osx-x64'">
    <CoreRT>True</CoreRT>
  </PropertyGroup>
  
  <!-- https://github.com/dotnet/corert -->
  <ItemGroup Condition="'$(CoreRT)' == 'True'">
    <RdXmlFile Include="Draw2D.rd.xml" />
    <PackageReference Include="Microsoft.DotNet.ILCompiler" Version="1.0.0-alpha-*" />
  </ItemGroup>

  <!-- https://github.com/dotnet/corert/blob/master/Documentation/using-corert/optimizing-corert.md -->
  <PropertyGroup Condition="'$(CoreRT)' == 'True'">
    <RootAllApplicationAssemblies>False</RootAllApplicationAssemblies>
    <IlcGenerateCompleteTypeMetadata>False</IlcGenerateCompleteTypeMetadata>
    <IlcGenerateStackTraceData>False</IlcGenerateStackTraceData>
  </PropertyGroup>

  <PropertyGroup Condition="'$(CoreRT)' != 'True'">
    <PublishTrimmed>True</PublishTrimmed>
    <PublishSingleFile>False</PublishSingleFile>
    <PublishReadyToRun>True</PublishReadyToRun>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Draw2D.Input\Draw2D.Input.csproj" />
    <ProjectReference Include="..\Draw2D.ZoomControl\Draw2D.ZoomControl.csproj" />
  </ItemGroup>

</Project>
